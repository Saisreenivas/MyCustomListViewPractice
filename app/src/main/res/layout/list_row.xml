<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/row_image"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ignited Indians"
        android:textStyle="bold"
        android:id="@+id/row_title"
        android:textColor="#0033a3"
        android:layout_toRightOf="@id/thumbnail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A.P.J. Abdul Kalam"
        android:textSize="16sp"
        android:id="@+id/row_author"
        android:textStyle="bold"
        android:textColor="#030e26"
        android:layout_below="@id/row_title"
        android:layout_toRightOf="@id/thumbnail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_pages"
        android:layout_alignParentRight="true"
        android:text="200 Pages"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#250182"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:layout_below="@id/row_pages"
        android:layout_alignParentRight="true"/>

</RelativeLayout>